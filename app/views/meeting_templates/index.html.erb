<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All meetings
    </h1>

    <a href="/meetings/new" class="btn btn-block btn-outline-secondary">
      Add a new meeting
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "meeting_templates/meetings_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Connections
        </th>

        <th>
          Date
        </th>

        <th>
          Meeting notes
        </th>

        <th>
          Location
        </th>

        <th>
          User
        </th>

        <th>
          Meeting type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @meetings.each do |meeting| %>
      <tr>
        <td>
          <%= meeting.id %>
        </td>

        <td>
          <%= meeting.connections_id %>
        </td>

        <td>
          <%= meeting.date %>
        </td>

        <td>
          <%= meeting.meeting_notes %>
        </td>

        <td>
          <% if meeting.location.present? %>
            <a href="/locations/<%= meeting.location.id %>">
              <%= meeting.location.address %>
            </a>
          <% end %>
        </td>

        <td>
          <% if meeting.user.present? %>
            <a href="/users/<%= meeting.user.id %>">
              <%= meeting.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= meeting.meeting_type %>
        </td>

        <td>
          <%= time_ago_in_words(meeting.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(meeting.updated_at) %> ago
        </td>

        <td>
          <a href="/meetings/<%= meeting.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @meetings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
