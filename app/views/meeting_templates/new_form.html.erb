<h1>
  Add a new meeting
</h1>


<hr>

<form action="/create_meeting" method="post">

  <div class="form-group">
    <label for="connections_id">
      Connections
    </label>

    <input type="text" id="connections_id" name="connections_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control">
  </div>

  <div class="form-group">
    <label for="meeting_notes">
      Meeting notes
    </label>

    <textarea id="meeting_notes" name="meeting_notes" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="location_id">
      Location
    </label>

    <%= select_tag(:location_id, options_from_collection_for_select(Location.all, :id, :address, @meeting.location_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="meeting_type">
      Meeting type
    </label>

    <input type="text" id="meeting_type" name="meeting_type" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create meeting
  </button>
</form>

<hr>

<a href="/meetings">
  Go back
</a>
