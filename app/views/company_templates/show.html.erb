<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Company #<%= @company.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/companies" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/companies/<%= @company.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit company
        </a>
      </div>

      <div class="col">
        <a href="/delete_company/<%= @company.id %>" class="btn btn-block btn-outline-secondary">
          Delete company
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Company
      </dt>
      <dd>
        <%= @company.company %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @company.location %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@company.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@company.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "company_templates/company_connections" %>
  </div>
</div>
