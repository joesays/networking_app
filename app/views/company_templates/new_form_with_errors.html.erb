<% if @company.present? %>
  <% if @company.errors.any? %>
    <% @company.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new company
</h1>


<hr>

<form action="/create_company" method="post">

  <div class="form-group">
    <label for="company">
      Company
    </label>

    <input type="text" id="company" name="company" class="form-control" value="<%= @company.company %>">
  </div>

  <div class="form-group">
    <label for="location">
      Location
    </label>

    <input type="text" id="location" name="location" class="form-control" value="<%= @company.location %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create company
  </button>
</form>

<hr>

<a href="/companies">
  Go back
</a>
