<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Connections

    <a data-toggle="collapse" href="#company_connections_new_form">
      Add connection
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @company.connections.each do |connection| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/connections/<%= connection.id %>">
          <%= connection.company_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_connection_from_company/<%= connection.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="company_connections_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "company_templates/company_connections_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
