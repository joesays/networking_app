<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All companies
    </h1>

    <a href="/companies/new" class="btn btn-block btn-outline-secondary">
      Add a new company
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "company_templates/companies_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Company
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @companies.each do |company| %>
      <tr>
        <td>
          <%= company.id %>
        </td>

        <td>
          <%= company.company %>
        </td>

        <td>
          <%= company.location %>
        </td>

        <td>
          <%= time_ago_in_words(company.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(company.updated_at) %> ago
        </td>

        <td>
          <a href="/companies/<%= company.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @companies, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
