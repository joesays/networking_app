<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Attendees

    <a data-toggle="collapse" href="#connection_attendees_new_form">
      Add attendee
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @connection.attendees.each do |attendee| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/attendees/<%= attendee.id %>">
          <%= attendee.connection_id %>
        </a>

        <a href="/delete_attendee_from_connection/<%= attendee.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="connection_attendees_new_form">
        <%= render partial: "connection_templates/connection_attendees_new_form" %>
      </div>
    </div>

  </ul>
</div>
