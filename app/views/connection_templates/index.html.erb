<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All connections
    </h1>

    <a href="/connections/new" class="btn btn-block btn-outline-secondary">
      Add a new connection
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Company
        </th>

        <th>
          Location
        </th>

        <th>
          Photo
        </th>

        <th>
          Name
        </th>

        <th>
          Linkein
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @connections.each do |connection| %>
      <tr>
        <!-- Display connection.id start -->
        <td>
          <%= connection.id %>
        </td>
        <!-- Display connection.id end -->

        <!-- Display connection.company_id start -->
        <td>
          <%= connection.company.company %>
        </td>
        <!-- Display connection.company_id end -->

        <!-- Display connection.location_id start -->
        <td>
          <%= connection.location.address %>
        </td>
        <!-- Display connection.location_id end -->

        <!-- Display connection.photo start -->
        <td>
          <img src='<%= connection.photo %>' class='img-fluid'>
        </td>
        <!-- Display connection.photo end -->

        <!-- Display connection.name start -->
        <td>
          <%= connection.name %>
        </td>
        <!-- Display connection.name end -->

        <!-- Display connection.linkein start -->
        <td>
          <%= connection.linkein %>
        </td>
        <!-- Display connection.linkein end -->

        <!-- Display connection.created_at start -->
        <td>
          <%= time_ago_in_words(connection.created_at) %> ago
        </td>
        <!-- Display connection.created_at end -->

        <!-- Display connection.updated_at start -->
        <td>
          <%= time_ago_in_words(connection.updated_at) %> ago
        </td>
        <!-- Display connection.updated_at end -->

        <td>
          <a href="/connections/<%= connection.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @connections, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
