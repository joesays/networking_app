<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Connection #<%= @connection.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/connections" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link connection start -->
      <div class="col">
        <a href="/connections/<%= @connection.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit connection
        </a>
      </div>
      <!-- Edit link connection end -->

      <!-- Delete link connection start -->
      <div class="col">
        <a href="/delete_connection/<%= @connection.id %>" class="btn btn-block btn-outline-secondary">
          Delete connection
        </a>
      </div>
      <!-- Delete link connection end -->
    </div>

    <dl>
      <dt>
        Company
      </dt>
      <!-- Display company_id start -->
      <dd>
        <%= @connection.company_id %>
      </dd>
      <!-- Display company_id end -->

      <dt>
        Location
      </dt>
      <!-- Display location_id start -->
      <dd>
        <%= @connection.location_id %>
      </dd>
      <!-- Display location_id end -->

      <dt>
        Photo
      </dt>
      <!-- Display photo start -->
      <dd>
        <%= @connection.photo %>
      </dd>
      <!-- Display photo end -->

      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @connection.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Linkein
      </dt>
      <!-- Display linkein start -->
      <dd>
        <%= @connection.linkein %>
      </dd>
      <!-- Display linkein end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@connection.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@connection.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->

<!-- Show Page Customization end -->
