<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Connection #<%= @connection.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/connections" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/connections/<%= @connection.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit connection
        </a>
      </div>

      <div class="col">
        <a href="/delete_connection/<%= @connection.id %>" class="btn btn-block btn-outline-secondary">
          Delete connection
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Company
      </dt>
      <dd>
        <% if @connection.company.present? %>
          <a href="/companies/<%= @connection.company_id %>">
            <%= @connection.company.company %>
          </a>
        <% end %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <% if @connection.location.present? %>
          <a href="/locations/<%= @connection.location_id %>">
            <%= @connection.location.address %>
          </a>
        <% end %>
      </dd>

      <dt>
        Photo
      </dt>
      <dd>
        <img src="<%= @connection.photo %>" class="img-fluid">
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @connection.name %>
      </dd>

      <dt>
        Linkein
      </dt>
      <dd>
        <%= @connection.linkein %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@connection.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@connection.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "connection_templates/connection_attendees" %>
  </div>
</div>
