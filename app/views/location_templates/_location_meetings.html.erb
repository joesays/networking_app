<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Meetings

    <a data-toggle="collapse" href="#location_meetings_new_form">
      Add meeting
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @location.meetings.each do |meeting| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/meetings/<%= meeting.id %>">
          <%= meeting.id %>
        </a>

        <%if current_user == meeting.user %>
          <a href="/delete_meeting_from_location/<%= meeting.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="location_meetings_new_form">
        <%= render partial: "location_templates/location_meetings_new_form" %>
      </div>
    </div>

  </ul>
</div>
