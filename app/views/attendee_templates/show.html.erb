<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Attendee #<%= @attendee.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/attendees" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/attendees/<%= @attendee.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit attendee
        </a>
      </div>

      <div class="col">
        <a href="/delete_attendee/<%= @attendee.id %>" class="btn btn-block btn-outline-secondary">
          Delete attendee
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Meeting
      </dt>
      <dd>
        <% if @attendee.meeting.present? %>
          <a href="/meetings/<%= @attendee.meeting_id %>">
            <%= @attendee.meeting.id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Connection
      </dt>
      <dd>
        <% if @attendee.connection.present? %>
          <a href="/connections/<%= @attendee.connection_id %>">
            <%= @attendee.connection.company_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@attendee.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@attendee.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

