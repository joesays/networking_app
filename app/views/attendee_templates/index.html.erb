<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All attendees
    </h1>

    <a href="/attendees/new" class="btn btn-block btn-outline-secondary">
      Add a new attendee
    </a>
  </div>
</div>

<!-- Ransack Code start -->

