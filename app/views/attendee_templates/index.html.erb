<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Meeting
        </th>

        <th>
          Connection
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @attendees.each do |attendee| %>
      <tr>
        <!-- Display attendee.id start -->
        <td>
          <%= attendee.id %>
        </td>
        <!-- Display attendee.id end -->

        <!-- Display attendee.meeting_id start -->
        <td>
          <%= attendee.meeting.id %>
        </td>
        <!-- Display attendee.meeting_id end -->

        <!-- Display attendee.connection_id start -->
        <td>
          <%= attendee.connection.company_id %>
        </td>
        <!-- Display attendee.connection_id end -->

        <!-- Display attendee.created_at start -->
        <td>
          <%= time_ago_in_words(attendee.created_at) %> ago
        </td>
        <!-- Display attendee.created_at end -->

        <!-- Display attendee.updated_at start -->
        <td>
          <%= time_ago_in_words(attendee.updated_at) %> ago
        </td>
        <!-- Display attendee.updated_at end -->

        <td>
          <a href="/attendees/<%= attendee.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
