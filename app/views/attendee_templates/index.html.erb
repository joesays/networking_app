<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All attendees
    </h1>

    <a href="/attendees/new" class="btn btn-block btn-outline-secondary">
      Add a new attendee
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "attendee_templates/attendees_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Meeting
        </th>

        <th>
          Connection
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @attendees.each do |attendee| %>
      <tr>
        <td>
          <%= attendee.id %>
        </td>

        <td>
          <% if attendee.meeting.present? %>
            <a href="/meetings/<%= attendee.meeting.id %>">
              <%= attendee.meeting.id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if attendee.connection.present? %>
            <a href="/connections/<%= attendee.connection.id %>">
              <%= attendee.connection.company_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(attendee.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(attendee.updated_at) %> ago
        </td>

        <td>
          <a href="/attendees/<%= attendee.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @attendees, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
