<!-- Validation failure messages -->
<% if @attendee.errors.any? %>
  <% @attendee.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit attendee #<%= @attendee.id %>
</h1>

<hr>

<!-- Form attendee start -->
<form action="/update_attendee/<%= @attendee.id %>" method="post">
<!-- Form attendee end -->

  <!-- Label and input for meeting_id start -->
  <div class="form-group">
    <label for="meeting_id">
      Meeting
    </label>

    <!-- Input for meeting_id start -->
    <input type="text" id="meeting_id" name="meeting_id" class="form-control" value="<%= @attendee.meeting_id %>">
    <!-- Input for meeting_id end -->
  </div>
  <!-- Label and input for meeting_id end -->

  <!-- Label and input for connection_id start -->
  <div class="form-group">
    <label for="connection_id">
      Connection
    </label>

    <!-- Input for connection_id start -->
    <input type="text" id="connection_id" name="connection_id" class="form-control" value="<%= @attendee.connection_id %>">
    <!-- Input for connection_id end -->
  </div>
  <!-- Label and input for connection_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update attendee
  </button>
</form>

<hr>

<a href="/attendees">
  Go back
</a>
